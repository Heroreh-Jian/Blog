<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"> Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>">
         </div>
         <div class="field">
             <label>Story Content</label>
             <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
            <input onclick="return confirm('You are going to make changes to this post.');" class="ui primary button big" type="submit">
            <a class="ui primary button big" href="/blogs/<%=blog._id%>">Go Back</a>
            
    </form>
</div>
<% include ./partials/footer %>